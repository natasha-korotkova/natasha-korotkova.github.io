---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">

  {% if page.lake_pic %}
          {% assign lake_image_path = page.lake_pic | prepend: 'assets/img/' %}
          
          {%
            include figure.liquid loading="eager" path=lake_image_path class='img-fluid z-depth-1
      rounded' sizes=95vw
            cache_bust=true
          %}
        
    {% endif %}

  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
